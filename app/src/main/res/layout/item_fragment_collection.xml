<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:padding="16dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/fuli_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"/>

    <TextView
        style="@style/text_gray_19"
        android:id="@+id/desc_text_view"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/fuli_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/desc_text_view"
        android:layout_toRightOf="@id/fuli_imageview"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/home_hot"/>

        <TextView
            style="@style/text_gray_13"
            android:id="@+id/who_text_view"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/f_d_time"/>

        <TextView
            style="@style/text_gray_13"
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>

